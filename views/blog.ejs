<%- include("partials/header.ejs") %>
<div class="blog-page-container">
    <% if(locals.title && locals.content) { %>
        <h1 id="blog-title"><%= title %></h1>
        <textarea id="blog-container" readonly><%= content %></textarea>
    <% } else { %>
        <h1>Tf bro !!</h1>
    <% } %>
    
    <% let update_url = `/blogs/update/${title}` %>
    <% let delete_url = `/blogs/delete/${title}` %>
    
    <div style="display: flex; gap: 60px; width: 100%; margin-top: 30px; justify-content: space-between;">
        <form action="<%= update_url %>" method="GET">
            <input value="Update this blog" type="submit">
        </form>
        
        <form action="<%= delete_url %>" method="POST">
            <input value="Delete this blog" type="submit" style="background-color: rgb(209, 4, 4);">
        </form>
    </div>    
</div>
